{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es5",
        "lib": ["es6", "dom"],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true
	},
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}
